{
    "kind": "collectionType",
    "collectionName": "stores",
    "info": {
        "singularName": "store",
        "pluralName": "stores",
        "displayName": "Store"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "store_name": {
            "type": "string"
        },
        "lat": {
            "type": "float"
        },
        "lng": {
            "type": "float"
        },
        "img_cover": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "cupons": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::cupon.cupon",
            "mappedBy": "stores"
        }
    }
}
